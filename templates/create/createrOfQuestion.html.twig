{% extends "base.html.twig" %}

{% block body %}
    <script src="http://code.jquery.com/jquery-3.3.1.min.js"></script>
    {{ form_start (form) }}
    {{ form_row (form.text) }}
    <form>
        <ul class="answers list-group" data-prototype="{{ form_widget(form.answers.vars.prototype)|e('html_attr') }}">
            {% for answer in form.answers %}
                <li class="list-group-item"> {{ form_widget( answer) }}</li>
            {% endfor %}
        </ul>
        {{ form_rest(form) }}
    </form>
    {{ form_end( form ) }}
{% endblock %}


{% block javascripts %}
    <script src="{{ asset('addquiz.js') }}"></script>
{% endblock %}

