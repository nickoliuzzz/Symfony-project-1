{% extends "base.html.twig" %}

{% block body %}
    {{ form_start (form) }}
    {{ form_row (form.text) }}
    <ul class="answers list-group" data-prototype="{{ form_widget(form.answers.vars.prototype)|e('html_attr') }}">
        {% for answer in form.answers %}
            <li class="list-group-item"> {{ form_row( answer) }}</li>
        {% endfor %}
    </ul>
    {{ form_end( form ) }}
{% endblock %}


{% block javascripts %}
    <script src="{{ asset('addquiz.js')}}"></script>
{% endblock %}

