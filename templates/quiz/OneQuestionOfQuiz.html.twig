{% extends "base.html.twig" %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/addquizstyle.css') }}">
{% endblock stylesheets %}

{% block body %}

    <form action="../../quiz/answer" method="POST">
    <div class="card ">
        <div class="card-header"><h3>{{ question.text }}</h3></div>
        <div class="card-body">
            {% for answer in question.answers %}
                {{ answer.text }}
                <input type="hidden" id="kek" name="idOfQuiz" value={{ app.request.get("id") }}>
                <input type="radio" id="subscribeNews" name="idOfAnswer" value={{ answer.id }}>
                <br>
            {% endfor %}
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Answer</button>
        </div>
    </div>
    </form>
{% endblock %}