{% extends "base.html.twig" %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/addquizstyle.css') }}">
{% endblock stylesheets %}

{% block body %}
    <form action="../../quiz/answer/{{ app.request.get("id") }}" method="POST">
    <h3> {{ question.text }}</h3>
    {% for answer in question.answers %}
        <h4>{{ answer.text }} </h4>
        <input type="checkbox" id="subscribeNews" name="idOfAnswer" value={{ answer.id }}>
    {% endfor %}
        <button type="submit">Answer</button>
    </form>
{% endblock %}